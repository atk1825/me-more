<%= render "shared/second_header"%>
<div class="main">
  <div class="user_edit_main">

<h2 class="devise_h2">新規登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>

  <div class="edit_new_field">
    <%= f.label :ニックネーム ,class:"edit__new__field" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"edit___new___field" %>
  </div>

  <div class="edit_new_field">
    <%= f.label :アイコン,class:"edit__new__field" %>
    <%= f.file_field :image %>
  </div>
  
  <div class="edit_new_field">
    <%= f.label :メールアドレス,class:"edit__new__field" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"edit___new___field" %>
  </div>

  <div class="edit_new_field">
    <%= f.label :年齢,class:"edit__new__field" %>
    <%= f.number_field :age, autofocus: true, autocomplete: "age", class:"edit___new___field" %>
  </div>

  <div class="edit_new_field">
    <%= f.label :パスワード,class:"edit__new__field" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"英数字６文字以上", class:"edit___new___field" %>
  </div>

  <div class="edit_new_field">
    <%= f.label :確認用パスワード,class:"edit__new__field" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード再入力", class:"edit___new___field" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"f_label"  %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>