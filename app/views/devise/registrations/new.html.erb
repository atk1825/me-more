<%= render "shared/second_header"%>
<div class="main">
  <div class="user_edit_main">

<h2 class="devise_h2">新規登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="edit_new_field">
    <%= f.label :ニックネーム %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="edit_new_field">
    <%= f.label :アイコン %>
    <%= f.file_field :image %>
  </div>
  
  <div class="edit_new_field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="edit_new_field">
    <%= f.label :年齢 %>
    <%= f.number_field :age, autofocus: true, autocomplete: "age" %>
  </div>

  <div class="edit_new_field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"英数字６文字以上" %>
  </div>

  <div class="edit_new_field">
    <%= f.label :確認用パスワード %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード再入力" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"f_label"  %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>