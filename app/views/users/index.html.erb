<%= render "shared/header" %>
<div class="mains">
  <div class="h1">MyPage</div>
      <% if user_signed_in?  %>
        <% if current_user.image.attached? %>
         <div class="icon_area">
          <%= image_tag current_user.image, class:"icon" %>
          <%= link_to current_user.name,  edit_user_registration_path, class:"user_name"%>
        </div>
        <%else%>
          <div class="icon_area">
            <%= image_tag "default.png", class:"icon"%>
            <%= link_to current_user.name,  edit_user_registration_path, class:"user_name" %>
          </div>
      <%end%>
      <% else %>
        <div class="icon_area">
          <%= image_tag "default.png", class:"icon"%>
        </div>
      <% end %>
<div class="output_link">
  <%= link_to 'アウトプットする', new_post_path, class:"output__link" %>
</div>
<div class="post_all">
  <div class="post_area">
    <div class="h2">投稿一覧</div>
    <% @posts.each do |post|%>
      <div class="post_content">
        <%= link_to post.title, problem_post_path(post.id), class:"post_title" %>
      </div>
    <% end %>
  </div>
  <div class="post_area">
    <div class="h2">1日後</div>
    <% @yesterday_posts.each do |post| %>
        <div class="post_content">
        <%= link_to post.title, problem_post_path(post.id), class:"post_title" %>
        </div>
    <% end %>
  </div>
  <div class="post_area">
    <div class="h2">3日後</div>
      <% @three_days_later_posts.each do |post| %>
        <div class="post_content">
        <%= link_to post.title, problem_post_path(post.id), class:"post_title" %>
        </div>
      <% end %>
  </div>
  <div class="post_area">
    <div class="h2">7日後</div>
      <% @seven_days_later_posts.each do |post| %>
        <div class="post_content">
        <%= link_to post.title, problem_post_path(post.id), class:"post_title" %>
        </div>
      <% end %>
  </div>
</div>
